<?xml version="1.0"?>
<project name="PCTCompile-test50">
  <taskdef resource="PCT.properties" />

  <target name="test1">
    <mkdir dir="build" />
    <PCTCompile destDir="build" dlcHome="${DLC}" relativePaths="true">
      <fileset dir="src" includes="**/*.p" />
      <propath>
        <pathelement location="." />
      </propath>
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

  <target name="test2">
    <touch file="src\test1.i" />
    <PCTCompile destDir="build" dlcHome="${DLC}" relativePaths="true" ignoredIncludes="src\test1.i" >
      <fileset dir="src" includes="**/*.p" />
      <propath>
        <pathelement location="." />
      </propath>
      <Profiler enabled="${PROFILER}" coverage="true" outputDir="profiler" />
    </PCTCompile>
  </target>

</project>
